<% include ./partials/header %>

<div class="ui main text container segment">
        <div class="ui huge header">Edit Post: <em><%= blog.title %></em></div>
        <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" placeholder="Title" value="<%= blog.title %>" required>
            </div>
            <div class="field">
                <label>Image</label>
                <div class="flex-row">
                    <input type="text" name="blog[image]" placeholder="Image" value="<%= blog.image %>" required>
                    <img class="ui centered rounded image mini left-margin" src="<%= blog.image %>">
                </div>
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]" placeholder="Edit post..." required><%- blog.body %></textarea>
            </div>
            <input class="ui big blue basic button" type="submit">
        </form>
    </div>

<% include ./partials/footer %>
