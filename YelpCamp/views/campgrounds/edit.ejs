<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground.id %>/edit?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="<%= campground.name %>" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="<%= campground.image %>" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" placeholder="<%= campground.description %>" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="How pricey is it?" value="<%= campground.description %>" min="0.00" step="0.01">
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>
            <a href="/campgrounds/<%= campground.id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
