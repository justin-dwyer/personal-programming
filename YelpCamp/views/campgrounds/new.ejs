<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a New Campground</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="What's it called?">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Show us a picture!">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Describe it.">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="How pricey is it?" min="0.01" step="0.01">
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
