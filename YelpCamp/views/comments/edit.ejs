<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Your Comment on <em><%= campground.name %></em></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground.id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="<%= comment.text %>" value="<%= comment.text %>">
                </div>
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>
            <a href="/campgrounds/<%= campground.id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
